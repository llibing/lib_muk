<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_marginTop="6dp"
        android:background="@drawable/background_rounded_rectangle_selector"
        android:layout_height="wrap_content">
    <RelativeLayout
            android:id="@+id/studentInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center" >
            <com.lib_muk.videoview.utils.RoundImageView
                android:id="@+id/teacher_icon"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:src="@drawable/mytopic" 
                />
            <TextView
                android:id="@+id/person_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="32dp"
                android:layout_toRightOf="@+id/teacher_icon"
                android:gravity="center"
                android:text="qwe"
                android:textSize="18dp" />
        </RelativeLayout>
    <LinearLayout 
	    android:id="@+id/brand_dealer_layout"
    	android:orientation="vertical"
    	android:padding="8dp"
    	android:gravity="center_vertical"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">
    <TextView 
	        android:id="@+id/name"
	        android:textColor="@android:color/background_dark"
	        android:textSize="16sp"
	        android:textStyle="bold"
		    android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
	    <TextView 
	        android:id="@+id/description"
	        android:ellipsize="end"
	        android:maxLines="1"
	        android:paddingTop="5dp"
	        android:textColor="@android:color/darker_gray"
	        android:textSize="13sp"
	        android:textStyle="bold"
		    android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
   </LinearLayout>
   </LinearLayout>
</LinearLayout>