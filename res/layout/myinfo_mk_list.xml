<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
   <ImageView 
	    android:id="@+id/allcouerse_imgId"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="16dp"
        android:scaleType="centerCrop"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="@drawable/new_friends_icon"/>
	 <LinearLayout 
	    android:id="@+id/brand_dealer_layout"
    	android:orientation="vertical"
    	android:gravity="center_vertical"
	    android:layout_width="match_parent"
	    android:layout_height="80dp">
	 <RelativeLayout
        android:id="@+id/pop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
          <TextView
            android:layout_marginTop="20dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="大神"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" /> 
            <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="2015-01-12"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp" /> 
    </RelativeLayout>
     <RelativeLayout
        android:id="@+id/p"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
	    <TextView 
	        android:id="@+id/allCourse"
	        android:text="一般用于自启动程序的声明，当Android系统启动时会发送这个广播，所以自启动程序必需声"
	        android:ellipsize="end"
	        android:maxLines="1"
	        android:textColor="@android:color/darker_gray"
	        android:textSize="13sp"
	        android:textStyle="bold"
		    android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
	</RelativeLayout>
	</LinearLayout>
</LinearLayout>